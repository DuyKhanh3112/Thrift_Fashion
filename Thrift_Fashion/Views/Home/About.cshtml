@{
    ViewBag.Title = "Thrift Fashion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pos_page">
    <div class="container">
        <div class="pos_page_inner">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <div class="single-popular-items mb-50 text-center">
                        <br />
                        <img src="~/Image/Client/img/Logo.jpg" height="300" alt="">
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <div class="single-popular-items mb-50 text-center">
                        <br>
                        <h1 class="ab-tittle"><strong>Thrift Fashion</strong></h1>
                        <h3 class="ab-tittle" style="font-family:'Times New Roman'"><i>"Shift to Thrift"</i></h3> <br>
                        <div class="text-justify" style="font-size:20px">
                            <strong>
                                Provides a facility for easy shopping of used apparel in new condition, making it
                                convenient for customers to shop from anywhere, anytime.
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <div class="single-popular-items mb-50 text-center">
                        <br>
                        <h1 class="ab-tittle"><strong>Nowadays</strong></h1><br>
                        <div class="text-justify" style="font-size:20px">
                            <strong>
                                Recycling, reuse or sustainability are not just words, but many people have taken action to protect the planet.
                                Instead of throwing away old clothes that are still in good condition, these clothes can be sold at thrift or used clothing stores.
                            </strong>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <div class="single-popular-items mb-50 text-center">
                        <br>
                        <h1 class="ab-tittle"><strong>Our target</strong></h1> <br>
                        <div class="text-justify" style="font-size:20px">
                            <strong>
                                <span class="ab-tittle">Thrift Fashion</span> helps people shop online for used clothing, making it easier for them
                                to access similar products. Users can access products, search, filter, etc. Send feedback
                                about the application through a feedback form
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<style>
    .ab-tittle {
        color: #00BBA6;
    }
</style>
